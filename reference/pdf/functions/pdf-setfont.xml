<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.pdf-setfont">
 <refnamediv>
  <refname>PDF_setfont</refname>
  <refpurpose>Set font</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>PDF_setfont</methodname>
   <methodparam><type>resource</type><parameter>pdfdoc</parameter></methodparam>
   <methodparam><type>int</type><parameter>font</parameter></methodparam>
   <methodparam><type>float</type><parameter>fontsize</parameter></methodparam>
  </methodsynopsis>
  <para>
   Sets the current font in the specified <parameter>fontsize</parameter>, using a
   <parameter>font</parameter> handle returned by <function>PDF_load_font</function>.
   &return.success;
  </para>
 </refsect1>
</refentry>

