<refentry xml:id="ui-draw-brush.setstop" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>UI\Draw\Brush::setStop</refname>
  <refpurpose>Stop Manipulation</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>bool</type><methodname>UI\Draw\Brush::setStop</methodname>
   <methodparam><type>integer</type><parameter>index</parameter></methodparam>
   <methodparam><type>float</type><parameter>position</parameter></methodparam>
   <methodparam><type>Color</type><parameter>color</parameter></methodparam>
  </methodsynopsis>
  <para>
   Shall set the previously added stop at index
  </para>

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>index</parameter></term>
    <listitem>
     <para>
      The index of the stop to change
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>position</parameter></term>
    <listitem>
     <para>
      The new position for the stop
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>color</parameter></term>
    <listitem>
     <para>
      The new color for the stop
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Indication of success
  </para>
 </refsect1>


</refentry>

