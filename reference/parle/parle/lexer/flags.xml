 <refnamediv>
  <refname>Parle\Lexer::flags</refname>
  <refpurpose>Set or get the lexer flags</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>mixed</type><methodname>Parle\Lexer::flags</methodname>
   <methodparam choice="opt"><type>integer</type><parameter>state</parameter></methodparam>
  </methodsynopsis>
  <para>

  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>state</parameter></term>
    <listitem>
     <para>
      New flags to be set.      
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   If the new flags value is passed, &null; is returned. Otherwise returns &integer;.
  </para>
 </refsect1>


